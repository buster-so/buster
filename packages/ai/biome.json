{
  "$schema": "https://biomejs.dev/schemas/2.2.6/schema.json",
  "extends": ["../../biome2.json"],
  "files": {
    "includes": ["src/**/*"]
  },
  "overrides": [
    {
      "includes": ["**/*.ts"],
      "linter": {
        "rules": {
          "suspicious": {
            "noConsole": "off"
          }
        }
      }
    },
    {
      "includes": ["evals/**/*.ts"],
      "linter": {
        "enabled": false
      }
    }
  ]
}
