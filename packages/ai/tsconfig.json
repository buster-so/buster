{
  "compilerOptions": {
    "lib": ["ESNext"],
    "target": "ESNext",
    "module": "Preserve",
    "moduleDetection": "force",
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "allowJs": true,
    "noEmit": true,
    "strict": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noPropertyAccessFromIndexSignature": false,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@tools/*": ["src/tools/*"],
      "@agents/*": ["src/agents/*"],
      "@workflows/*": ["src/workflows/*"],
      "@access-controls/*": ["../../access-controls/src/*"]
    }
  },
  "include": [
    "src/**/*",
    "tests/**/*",
    "src/tools/file-tools/edit-file-tool.ts",
    "src/tools/file-tools/glob-tool.ts",
    "src/tools/file-tools/grep-tool.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
