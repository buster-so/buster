{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "paths": {
      "@/*": ["src/*"],
      "@tools/*": ["src/tools/*"],
      "@agents/*": ["src/agents/*"],
      "@workflows/*": ["src/workflows/*"],
      "@utils/*": ["src/utils/*"],
      "@memory/*": ["src/utils/memory/*"]
    }
  },
  "include": [
    "src/**/*",
    "tests/**/*",
    "evals/**/*"
  ],
  "exclude": ["node_modules", "dist"]
}
