{
  "$schema": "https://turbo.build/schema.json",
  "extends": ["//"],
  "tasks": {
    "build": {
      "inputs": [
        "src/**/*",
        "!src/**/*.test.{ts,tsx,js,jsx}",
        "!src/**/*.spec.{ts,tsx,js,jsx}",
        "package.json",
        "tsconfig.json"
      ],
      "outputs": ["dist/**/*"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["^build"],
      "with": ["@buster/database#dev"]
    },
    "start": {
      "cache": false,
      "persistent": true
    }
  }
}
