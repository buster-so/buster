{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "allowImportingTsExtensions": false,
    "rootDir": ".",
    "baseUrl": ".",
    "outDir": "dist",
    "noEmit": false,
    "composite": true,
    "declaration": true,
    "tsBuildInfoFile": "dist/.tsbuildinfo",
    "esModuleInterop": true,
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src/**/*", "tests/**/*"],
  "exclude": ["node_modules", "dist"]
}
