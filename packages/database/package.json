{
  "name": "@buster/database",
  "version": "1.0.0",
  "type": "module",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "default": "./src/index.ts"
    }
  },
  "scripts": {
    "build": "tsc --build",
    "build:bun": "bun build src/index.ts --outdir dist --target node",
    "clean": "rm -rf dist",
    "db:check": "drizzle-kit check",
    "db:generate": "drizzle-kit generate",
    "db:introspect": "drizzle-kit introspect",
    "db:migrate": "drizzle-kit migrate",
    "db:pull": "drizzle-kit pull",
    "db:push": "drizzle-kit push",
    "db:reset": "supabase db reset",
    "db:seed": "bun run scripts/setup-db.ts && bun run scripts/seed.ts",
    "db:start-supabase": "supabase start",
    "db:stop": "supabase stop",
    "db:studio": "drizzle-kit studio",
    "dev": "echo 'this is controlled by turbo - you should not be running this unless you are referencing it from another packages turbo.json' && true",
    "lint": "biome check .",
    "stop": "pnpm run db:stop",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@buster/typescript-config": "workspace:*",
    "@buster/vitest-config": "workspace:*",
    "ai": "catalog:",
    "drizzle-kit": "^0.31.1",
    "drizzle-orm": "catalog:",
    "postgres": "^3.4.7",
    "zod": "catalog:"
  }
}
