{
    "compilerOptions": {
      // Use the latest JavaScript features and APIs
      "lib": ["ESNext"],
      "target": "ESNext",
  
      // Module handling as expected by Bun
      "module": "Preserve",
      "moduleDetection": "force",
      "moduleResolution": "bundler",
  
      // Allow modern import styles used by Bun
      "allowImportingTsExtensions": true,
      "verbatimModuleSyntax": true,
  
      // Enable JSX if you use it (can be omitted for pure backend)
      "jsx": "react-jsx",
  
      // Allow JS files in your project if needed
      "allowJs": true,
  
      // Do not emit files when running tsc (useful for type-checking only)
      "noEmit": true,
  
      // Strictness and safety (Rust-like experience)
      "strict": true,
      "skipLibCheck": true,
      "noFallthroughCasesInSwitch": true,
      "noUncheckedIndexedAccess": true,
      "noImplicitOverride": true,
  
      // Optionally enable these for even stricter checks
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "noPropertyAccessFromIndexSignature": true
    }
  }
  