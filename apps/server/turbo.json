{
  "extends": ["//"],
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "start": {
      "dependsOn": ["@buster-app/supabase#start", "build"],
      "cache": true,
      "persistent": true
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["@buster-app/supabase#start", "^build"],
      "with": [
        "@buster/ai#dev",
        "@buster/server-shared#dev",
        "@buster/access-controls#dev",
        "@buster/data-source#dev",
        "@buster-app/trigger#dev",
        "@buster-app/electric-server#dev",
        "@buster-app/api-legacy#dev"
      ]
    },
    "dev:fast": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["@buster-app/supabase#start", "^build"],
      "with": [
        "@buster/ai#dev:fast",
        "@buster/server-shared#dev:fast",
        "@buster/access-controls#dev:fast",
        "@buster/data-source#dev",
        "@buster-app/trigger#dev:fast",
        "@buster-app/electric-server#dev:fast",
        "@buster-app/api-legacy#dev:fast"
      ]
    }
  }
}
