{
  "name": "@buster-app/server",
  "type": "module",
  "exports": {
    ".": {
      "types": "./src/index.ts"
    }
  },
  "scripts": {
    "prebuild": "bun run scripts/validate-env.js",
    "build": "bun build src/index.ts --outdir ./dist --target bun",
    "build:vercel": "tsup --config tsup.config.vercel.ts",
    "dev": "bun --max-old-space-size=512 run --hot src/index.ts",
    "lint": "biome check",
    "prod": "pnpm run build:vercel && pnpm run start:vercel",
    "start": "bun run src/index.ts",
    "start:vercel": "dotenv -e .env -- node dist/index.cjs",
    "test": "vitest run",
    "test:coverage": "vitest --coverage",
    "test:watch": "vitest --watch",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@buster/access-controls": "workspace:*",
    "@buster/database": "workspace:*",
    "@buster/server-shared": "workspace:*",
    "@buster/test-utils": "workspace:*",
    "@buster/typescript-config": "workspace:*",
    "@buster/vitest-config": "workspace:*",
    "@hono/zod-validator": "^0.7.0",
    "@supabase/supabase-js": "catalog:",
    "@trigger.dev/sdk": "catalog:",
    "hono": "catalog:",
    "hono-pino": "^0.8.0",
    "pino": "^9.7.0",
    "pino-pretty": "^13.0.0",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@vercel/node": "^5.3.0",
    "tsup": "^8.5.0"
  }
}
