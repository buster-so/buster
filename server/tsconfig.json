{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "noEmit": false,
    "allowImportingTsExtensions": false,
    "module": "ESNext",
    "target": "ES2022",
    "moduleResolution": "bundler",

    // Runtime compatibility
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,

    // Build configuration - declaration required for composite
    "declaration": true,
    "sourceMap": true,

    // Monorepo optimizations
    "composite": true,
    "tsBuildInfoFile": "dist/.tsbuildinfo",

    // Server path mapping (local aliases) - these extend the base config
    "baseUrl": "./",
    "paths": {
      // Local server paths (use different prefix to avoid conflicts)
      "@server/*": ["src/*"],
      "@server/types/*": ["src/types/*"],
      "@server/utils/*": ["src/utils/*"],
      "@server/middleware/*": ["src/middleware/*"],
      "@server/api/*": ["src/api/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.test.ts", "**/*.spec.ts"],
  "ts-node": {
    "esm": true
  }
}
