{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "rootDir": "src",
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",
    "baseUrl": ".",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",
    "paths": {
      "@/*": ["src/*"],
      "@/access-controls/*": ["../packages/access-controls/src/*"]
    }
  },
  "include": ["src/**/*", "../packages/access-controls/src/**/*"],
  "exclude": ["node_modules", "dist"]
}
