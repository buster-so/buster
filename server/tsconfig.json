{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "noEmit": false,
    "allowImportingTsExtensions": false,
    "module": "ESNext",
    "target": "ES2022",
    "moduleResolution": "bundler",

    // Runtime compatibility
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,

    // Build configuration - declaration required for composite
    "declaration": true,
    "sourceMap": true,

    // Monorepo optimizations
    "composite": true,
    "tsBuildInfoFile": "dist/.tsbuildinfo",

    // Server path mapping (local aliases) - these extend the base config
    "baseUrl": "./",
    "paths": {
      // Local server paths (use different prefix to avoid conflicts)
      "@/*": ["src/*"],
      "@/types/*": ["src/types/*"],
      "@/utils/*": ["src/utils/*"],
      "@/middleware/*": ["src/middleware/*"],
      "@/api/*": ["src/api/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.test.ts", "**/*.spec.ts"],
  "references": [{ "path": "../packages/database" }, { "path": "../packages/access-controls" }],
  "ts-node": {
    "esm": true
  },

}
