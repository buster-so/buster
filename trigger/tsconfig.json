{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "noEmit": false,
    "allowImportingTsExtensions": false,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "composite": true,
    "tsBuildInfoFile": "dist/.tsbuildinfo",
    "module": "ESNext",
    "target": "ES2022",
    "moduleResolution": "bundler"
  },
  "include": ["src/**/*", "tests/**/*"],
  "exclude": ["node_modules", "dist"],
  "references": [
    { "path": "../packages/database" },
    { "path": "../packages/test-utils" }
  ]
}
