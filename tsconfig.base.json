{
  "compilerOptions": {
    // Modern JS/TS features
    "lib": ["ESNext"],
    "target": "ESNext",
    "module": "Preserve",
    "moduleDetection": "force",
    "moduleResolution": "bundler",

    // Modern import/export features
    "allowImportingTsExtensions": false,
    "verbatimModuleSyntax": true,
    "allowJs": true,
    "noEmit": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "composite": true,
    "types": ["node", "vitest/globals"],

    // Path mapping for clean cross-package imports
    "baseUrl": ".",
    "paths": {
      // Package aliases - consistent @buster/* pattern
      "@buster/access-controls": ["packages/access-controls/src"],
      "@buster/access-controls/*": ["packages/access-controls/src/*"],
      "@buster/ai": ["packages/ai/src"],
      "@buster/ai/*": ["packages/ai/src/*"],
      "@buster/data-source": ["packages/data-source/src"],
      "@buster/data-source/*": ["packages/data-source/src/*"],
      "@buster/database": ["packages/database/src"],
      "@buster/rerank": ["packages/rerank/src"],
      "@buster/rerank/*": ["packages/rerank/src/*"],
      "@buster/stored-values": ["packages/stored-values/src"],
      "@buster/stored-values/*": ["packages/stored-values/src/*"],
      "@buster/web-tools": ["packages/web-tools/src"],
      "@buster/web-tools/*": ["packages/web-tools/src/*"],
      "@buster/test-utils": ["packages/test-utils/src"],
      "@buster/test-utils/*": ["packages/test-utils/src/*"],

      // Server aliases
      "@server": ["server/src"],
      "@server/*": ["server/src/*"],

      // Trigger aliases
      "@trigger": ["trigger/src"],
      "@trigger/*": ["trigger/src/*"],

      // AI package specific aliases (commonly used)
      "@tools/*": ["packages/ai/src/tools/*"],
      "@agents/*": ["packages/ai/src/agents/*"],
      "@workflows/*": ["packages/ai/src/workflows/*"],
      "@utils/*": ["packages/ai/src/utils/*"],
      "@memory/*": ["packages/ai/src/utils/memory/*"]
    },

    // Strict type checking (Rust-like experience)
    "strict": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "noUnusedLocals": false,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "forceConsistentCasingInFileNames": true,
    "noPropertyAccessFromIndexSignature": false
  },
  "ts-node": {
    "esm": true
  }
}
