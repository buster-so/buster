{
  "name": "buster",
  "private": true,
  "workspaces": [
    "packages/*",
    "trigger",
    "server"
  ],
  "scripts": {
    "ai:dev": "npm run --cwd packages/ai dev",
    "check": "biome check ${1:-.}",
    "check:fix": "biome check --write ${1:-.}",
    "ci:check": "npm run check && npm run typecheck",
    "db": "npm run --cwd packages/database ${1:-db:generate}",
    "db:check": "npm run --cwd packages/database db:check",
    "db:generate": "npm run --cwd packages/database db:generate",
    "db:introspect": "npm run --cwd packages/database db:introspect",
    "db:migrate": "npm run --cwd packages/database db:migrate",
    "db:pull": "npm run --cwd packages/database db:pull",
    "db:push": "npm run --cwd packages/database db:push",
    "db:reset": "npm run --cwd packages/database db:push --force",
    "db:setup": "npm run --cwd packages/database db:setup",
    "db:snapshot": "npm run --cwd packages/database db:snapshot",
    "db:studio": "npm run --cwd packages/database db:studio",
    "db:validate": "npm run --cwd packages/database db:validate",
    "evals": "bash scripts/evals.sh",
    "format": "biome format ${1:-.}",
    "format:fix": "biome format --write ${1:-.}",
    "lint": "biome lint ${1:-.}",
    "lint:file": "biome lint ${1:-}",
    "lint:fix": "biome lint --write ${1:-.}",
    "pre-commit": "npm run lint:fix && npm run format:fix",
    "seed": "npm run --cwd packages/database seed",
    "seed:generate": "npm run --cwd packages/database seed:generate",
    "seed:list": "npm run --cwd packages/database seed:list",
    "seed:run": "npm run --cwd packages/database seed:run",
    "seed:snapshot": "npm run --cwd packages/database seed:snapshot",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:file": "vitest run ${1:-}",
    "test:ui": "vitest --ui",
    "test:watch": "vitest watch",
    "test:watch:file": "vitest watch ${1:-}",
    "trigger:deploy": "npm run deploy --workspace=trigger",
    "trigger:dev": "npm run dev --workspace=trigger",
    "trigger:test": "npm run test --workspace=trigger",
    "trigger:test:integration": "npm run test:integration --workspace=trigger",
    "typecheck": "sh -c 'cd \"${1:-packages/database}\" && npx tsc --noEmit' -- \"$@\""
  },
  "dependencies": {
    "@ai-sdk/amazon-bedrock": "^2.2.10",
    "@ai-sdk/anthropic": "^1.2.12",
    "@ai-sdk/openai": "^1.3.22",
    "@aws-sdk/credential-providers": "^3.826.0",
    "@google-cloud/bigquery": "^7.9.4",
    "@mastra/core": "^0.10.3",
    "@mastra/evals": "^0.10.2",
    "@mastra/libsql": "^0.10.1",
    "@mastra/loggers": "^0.10.1",
    "@mastra/memory": "^0.10.2",
    "@mastra/pg": "^0.10.1",
    "@mendable/firecrawl-js": "^1.25.5",
    "@openrouter/ai-sdk-provider": "^0.7.1",
    "@supabase/supabase-js": "^2.50.0",
    "@trigger.dev/sdk": "^3.3.17",
    "ai": "^4.3.16",
    "drizzle-orm": "^0.44.2",
    "glob": "^11.0.2",
    "hono": "^4.7.11",
    "minimatch": "^10.0.1",
    "mssql": "^11.0.1",
    "mysql2": "^3.14.1",
    "pg": "^8.16.0",
    "postgres": "^3.4.7",
    "snowflake-sdk": "^2.1.0",
    "yaml": "^2.8.0",
    "zod": "^3.25.57"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@trigger.dev/build": "^3.3.17",
    "@types/bun": "latest",
    "@types/mssql": "^9.1.7",
    "@types/node": "^20.17.57",
    "@types/pg": "^8.15.4",
    "@types/snowflake-sdk": "^1.6.24",
    "@types/uuid": "^10.0.0",
    "@vitest/coverage-v8": "^3.2.3",
    "@vitest/ui": "^3.2.3",
    "autoevals": "^0.0.129",
    "axios": "^1.9.0",
    "braintrust": "^0.0.206",
    "dotenv": "^16.5.0",
    "drizzle-kit": "^0.31.1",
    "typescript": "^5.8.3",
    "uuid": "^9.0.1",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.3"
  },
  "peerDependencies": {
    "bun": "^1.2.15",
    "typescript": "^5"
  }
}