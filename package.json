{
  "name": "buster",
  "private": true,
  "scripts": {
    "ai:dev": "pnpm --filter @buster/ai dev",
    "build": "turbo build",
    "check": "biome check ${1:-.}",
    "check:fix": "biome check --write ${1:-.}",
    "ci:check": "pnpm run check && pnpm run typecheck",
    "db:check": "pnpm --filter @buster/database run db:check",
    "db:generate": "pnpm --filter @buster/database run db:generate",
    "db:introspect": "pnpm --filter @buster/database run db:introspect",
    "db:migrate": "pnpm --filter @buster/database run db:migrate",
    "db:pull": "pnpm --filter @buster/database run db:pull",
    "db:push": "pnpm --filter @buster/database run db:push",
    "db:setup": "pnpm --filter @buster/database run db:setup",
    "db:studio": "pnpm --filter @buster/database run db:studio",
    "dev": "turbo dev",
    "evals": "bash scripts/evals.sh",
    "format": "biome format ${1:-.}",
    "format:fix": "biome format --write ${1:-.}",
    "lint": "turbo lint",
    "sync:deps": "node scripts/sync-workspace-deps.js",
    "test": "dotenv -e .env -- turbo test",
    "test:coverage": "turbo test:coverage",
    "test:file": "vitest run ${1:-}",
    "test:ui": "vitest --ui",
    "test:watch": "turbo test:watch",
    "test:watch:file": "vitest watch ${1:-}",
    "trigger:deploy": "pnpm --filter @buster/trigger run deploy",
    "trigger:dev": "dotenv -e .env -- pnpm --filter @buster/trigger run dev",
    "trigger:test": "pnpm --filter @buster/trigger run test",
    "trigger:test:integration": "pnpm --filter @buster/trigger run test:integration",
    "typecheck": "turbo typecheck"
  },
  "dependencies": {
    "@ai-sdk/amazon-bedrock": "^2.2.10",
    "@ai-sdk/anthropic": "^1.2.12",
    "@ai-sdk/openai": "^1.3.22",
    "@aws-sdk/credential-providers": "^3.830.0",
    "@google-cloud/bigquery": "^7.9.4",
    "@mastra/core": "^0.10.6",
    "@mastra/evals": "^0.10.4",
    "@mastra/libsql": "^0.10.3",
    "@mastra/loggers": "^0.10.2",
    "@mastra/memory": "^0.10.4",
    "@mastra/pg": "^0.11.0",
    "@mendable/firecrawl-js": "^1.25.5",
    "@supabase/supabase-js": "^2.50.0",
    "@trigger.dev/sdk": "^3.3.17",
    "ai": "^4.3.16",
    "axios": "^1.10.0",
    "dotenv-cli": "^8.0.0",
    "drizzle-orm": "^0.44.2",
    "glob": "^11.0.3",
    "hono": "^4.8.0",
    "minimatch": "^10.0.3",
    "mssql": "^11.0.1",
    "mysql2": "^3.14.1",
    "pg": "^8.16.1",
    "postgres": "^3.4.7",
    "snowflake-sdk": "^2.1.0",
    "yaml": "^2.8.0",
    "zod": "^3.25.67"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@trigger.dev/build": "^3.3.17",
    "@types/bun": "latest",
    "@types/mssql": "^9.1.7",
    "@types/node": "^20.17.57",
    "@types/pg": "^8.15.4",
    "@types/snowflake-sdk": "^1.6.24",
    "@types/uuid": "^10.0.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "autoevals": "^0.0.129",
    "braintrust": "^0.0.206",
    "dotenv": "^16.5.0",
    "drizzle-kit": "^0.31.1",
    "turbo": "^2.3.4",
    "typescript": "^5.8.3",
    "uuid": "^11.1.0",
    "vite": "^6.3.5",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  },
  "peerDependencies": {
    "bun": "^1.2.15",
    "typescript": "^5"
  },
  "packageManager": "pnpm@9.15.0"
}