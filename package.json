{
  "name": "buster",
  "private": true,
  "workspaces": [
    "packages/*",
    "tasks",
    "server"
  ],
  "scripts": {
    "ai:dev": "bun run --cwd packages/ai dev",
    "tasks:dev": "bun run --cwd tasks dev",
    "tasks:deploy": "bun run --cwd tasks deploy",
    "tasks:build": "bun run --cwd tasks build",
    "trigger:dev": "bun run --cwd tasks dev",
    "trigger:deploy": "bun run --cwd tasks deploy",
    "db": "bun run --cwd packages/database ${1:-db:generate}",
    "test": "bun --cwd ${1:-packages/database} test ${2:-}",
    "test:watch": "bun --cwd ${1:-packages/database} test --watch ${2:-}",
    "test:coverage": "bun --cwd ${1:-packages/database} test --coverage ${2:-}",
    "lint": "biome lint ${1:-.}",
    "lint:fix": "biome lint --write ${1:-.}",
    "format": "biome format ${1:-.}",
    "format:fix": "biome format --write ${1:-.}",
    "check": "biome check ${1:-.}",
    "check:fix": "biome check --write ${1:-.}",
    "typecheck": "bun --cwd ${1:-packages/database} run tsc --noEmit || echo 'TypeScript check completed for ${1:-packages/database}'",
    "ci:check": "bun run check && bun run typecheck",
    "pre-commit": "bun run lint:fix && bun run format:fix",
    "db:generate": "bun run --cwd packages/database db:generate",
    "db:migrate": "bun run --cwd packages/database db:migrate",
    "db:push": "bun run --cwd packages/database db:push",
    "db:pull": "bun run --cwd packages/database db:pull",
    "db:introspect": "bun run --cwd packages/database db:introspect",
    "db:studio": "bun run --cwd packages/database db:studio",
    "db:check": "bun run --cwd packages/database db:check",
    "db:setup": "bun run --cwd packages/database db:setup",
    "db:snapshot": "bun run --cwd packages/database db:snapshot",
    "db:validate": "bun run --cwd packages/database db:validate",
    "db:reset": "bun run --cwd packages/database db:push --force",
    "seed": "bun run --cwd packages/database seed",
    "seed:generate": "bun run --cwd packages/database seed:generate",
    "seed:run": "bun run --cwd packages/database seed:run",
    "seed:snapshot": "bun run --cwd packages/database seed:snapshot",
    "seed:list": "bun run --cwd packages/database seed:list"
  },
  "dependencies": {
    "@ai-sdk/openai": "^1.3.22",
    "@mastra/core": "^0.10.0",
    "@mastra/evals": "^0.10.0",
    "@mastra/libsql": "^0.10.0",
    "@mastra/loggers": "^0.10.0",
    "@mastra/memory": "^0.10.0",
    "@trigger.dev/sdk": "^3.3.17",
    "ai": "^4.0.0",
    "drizzle-orm": "^0.43.1",
    "hono": "^4.7.10",
    "postgres": "^3.4.5"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@trigger.dev/build": "^3.3.17",
    "@types/bun": "latest",
    "@types/node": "^20.0.0",
    "drizzle-kit": "^0.31.1",
    "typescript": "^5.0.0",
    "vitest": "^3.1.4"
  },
  "peerDependencies": {
    "bun": "^1.0.0",
    "typescript": "^5"
  }
}
