{
  "name": "buster",
  "private": true,
  "workspaces": [
    "packages/*",
    "tasks",
    "server"
  ],
  "scripts": {
    "tasks:dev": "bun run --cwd tasks dev",
    "tasks:deploy": "bun run --cwd tasks deploy",
    "tasks:build": "bun run --cwd tasks build",
    "trigger:dev": "bun run --cwd tasks dev",
    "trigger:deploy": "bun run --cwd tasks deploy",
    "db": "bun run --cwd packages/database ${1:-db:generate}",
    "test": "bun --cwd ${1:-packages/database} test ${2:-}",
    "test:watch": "bun --cwd ${1:-packages/database} test --watch ${2:-}",
    "test:coverage": "bun --cwd ${1:-packages/database} test --coverage ${2:-}",
    "lint": "biome lint ${1:-.}",
    "lint:fix": "biome lint --write ${1:-.}",
    "format": "biome format ${1:-.}",
    "format:fix": "biome format --write ${1:-.}",
    "check": "biome check ${1:-.}",
    "check:fix": "biome check --write ${1:-.}",
    "typecheck": "bun --cwd ${1:-packages/database} run tsc --noEmit || echo 'TypeScript check completed for ${1:-packages/database}'",
    "ci:check": "bun run check && bun run typecheck",
    "pre-commit": "bun run lint:fix && bun run format:fix"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4"
  }
}
