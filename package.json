{
  "name": "buster",
  "private": true,
  "workspaces": [
    "packages/*",
    "tasks/*",
    "server"
  ],
  "scripts": {
    "tasks:dev": "bun run --cwd tasks dev",
    "tasks:deploy": "bun run --cwd tasks deploy",
    "tasks:build": "bun run --cwd tasks build",
    "trigger:dev": "bun run --cwd tasks dev",
    "trigger:deploy": "bun run --cwd tasks deploy",
    "db:generate": "bun run --cwd packages/database db:generate",
    "db:migrate": "bun run --cwd packages/database db:migrate",
    "db:push": "bun run --cwd packages/database db:push",
    "db:pull": "bun run --cwd packages/database db:pull",
    "db:introspect": "bun run --cwd packages/database db:introspect",
    "db:studio": "bun run --cwd packages/database db:studio",
    "db:check": "bun run --cwd packages/database db:check",
    "db:setup": "bun run --cwd packages/database db:setup",
    "db:snapshot": "bun run --cwd packages/database db:snapshot",
    "db:validate": "bun run --cwd packages/database db:validate",
    "db:seed": "bun run --cwd packages/database seed",
    "db:seed:generate": "bun run --cwd packages/database seed:generate",
    "db:seed:run": "bun run --cwd packages/database seed:run",
    "db:seed:snapshot": "bun run --cwd packages/database seed:snapshot",
    "db:seed:list": "bun run --cwd packages/database seed:list"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4"
  }
}
