{
    "$schema": "https://turbo.build/schema.json",
    "ui": "tui",
    "tasks": {
        "build": {
            "dependsOn": [
                "^build"
            ],
            "inputs": [
                "$TURBO_DEFAULT$",
                ".env*"
            ],
            "outputs": [
                "dist/**",
                ".next/**",
                "!.next/cache/**"
            ]
        },
        "dev": {
            "cache": false,
            "persistent": true
        },
        "lint": {
            "dependsOn": [
                "^build",
                "^lint"
            ]
        },
        "typecheck": {
            "dependsOn": [
                "^build"
            ],
            "inputs": [
                "$TURBO_DEFAULT$",
                "tsconfig.json"
            ]
        },
        "test": {
            "dependsOn": [
                "^build"
            ],
            "inputs": [
                "$TURBO_DEFAULT$",
                "**/*.test.{ts,tsx,js,jsx}",
                "**/*.spec.{ts,tsx,js,jsx}",
                "tests/**/*",
                ".env*"
            ]
        },
        "test:watch": {
            "cache": false,
            "persistent": true
        },
        "test:coverage": {
            "dependsOn": [
                "^build"
            ],
            "inputs": [
                "$TURBO_DEFAULT$",
                "**/*.test.{ts,tsx,js,jsx}",
                "**/*.spec.{ts,tsx,js,jsx}",
                "tests/**/*",
                ".env*"
            ],
            "outputs": [
                "coverage/**"
            ]
        },
        "build:commonjs": {
            "cache": false,
            "persistent": false,
            "outputs": ["dist/**"]
          },
          "build:commonjs:watch": {
            "cache": false,
            "persistent": true,
            "dependsOn": ["build:commonjs"]
          }
    },
    "globalDependencies": [
        ".env*"
    ],
    "envMode": "strict"
}